@using Quiz.Models
@model Registration
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card" style="width:500px">
    <div class="card-body">
        <form asp-action="Registration" asp-controller="auth" method="post">
            <div asp-validation-summary="All">
            </div>
            <div class="form-group mb-2">
                <label>User Name</label>
                <input type="email" class="form-control" asp-for="UserName" placeholder="Enter Username" required>
            </div>
            <div class="form-group mb-2">
                <div class="row">
                    <div class="col-lg-6">
                        <label>First Name</label>
                        <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name" required>
                    </div>
                    <div class="col-lg-6">
                        <label>Last Name</label>
                        <input type="text" class="form-control" asp-for="LastName" placeholder="Enter Last Name" required>
                    </div>
                </div>
                
            </div>
            <div class="form-group mb-2">
                <label>Pnone Number</label>
                <input type="number" class="form-control" asp-for="Number" placeholder="Phone Number" required>
            </div>
            
            <button type="submit" class="btn btn-primary">Sign Up</button>
            <a type="button" class="btn btn-link" href="/auth/login">LogIn</a>
        </form>
    </div>
</div>

