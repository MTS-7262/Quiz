@using Quiz.Models
@model Question

<div class="row g-0">
    <div class="col-md-4">
        <img height="100%" width="100%" src="@Model.Image" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
        <div class="card-body">
            @Html.HiddenFor(z => z.ID)
            <h5 class="card-title">@Model.Ques</h5>
            <p class="card-text">

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="option1" name="inlineRadioOptions" value="@Model.Option1">
                    <label class="form-check-label" for="option1">@Model.Option1</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="option2" value="@Model.Option2">
                    <label class="form-check-label" for="option2">@Model.Option2</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="option3" value="@Model.Option3">
                    <label class="form-check-label" for="option3">@Model.Option3</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="option4" value="@Model.Option4">
                    <label class="form-check-label" for="option4">@Model.Option4</label>
                </div>
            </p>
            <button type="button" onclick="GetQuestion()" class="btn btn-primary">Next</button>
        </div>
    </div>
</div>